{
  "extends": "@typebot.io/tsconfig/react.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "typeRoots": [
      "./src/global.d.ts",
      "./src/env.d.ts",
      "./node_modules/@types"
    ]
  }
}
