{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,

    "module": "preserve",
    "moduleResolution": "bundler",

    "lib": ["esnext"],

    "jsx": "preserve",

    "composite": true,
    "incremental": true
  }
}
